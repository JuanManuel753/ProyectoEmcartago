</EditForm>
@code {
    bool Otro_value = false;
    [Parameter] public IngresoySalida IngresoySalidaEquiposComputo { get; set; }
    [Parameter] public EventCallback OnValidSubmit { get; set; }

    MudMessageBox mboxVolver { get; set; }

    private async void Messageboxvolver()
    {
        string state = "Message box hasn't been opened yet";
        bool? result = await mboxVolver.Show();
        state = result == null ? "Cancelled" : "Deleted!";
        StateHasChanged();
    }
    async Task Volver()
    {
        NavigationManager.NavigateTo("indiceingresoysalidacomputo");
    }
}