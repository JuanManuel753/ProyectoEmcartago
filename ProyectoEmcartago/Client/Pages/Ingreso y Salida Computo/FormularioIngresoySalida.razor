                        <label>Mantenimiento y/o Reparación</label>
                        <InputCheckbox @bind-Value="@IngresoySalidaEquiposComputo.Mantenimiento_y_o_Reparacion" />
                    </div>
                    <div style="width:150px;  height:50px; margin:5px; text-align:center;">
                        <label>Prestamo</label>
                        <InputCheckbox @bind-Value="@IngresoySalidaEquiposComputo.Prestamo" />
                    </div>
                    <div style="width:150px;  height:50px; margin:5px; text-align:center;">
                        <label>Devolución</label>
                        <InputCheckbox @bind-Value="@IngresoySalidaEquiposComputo.Devolucion" />
                    </div>
                    <div style="width:150px;  height:50px; margin:5px; text-align:center;">
                        <label>Por ser de su propiedad</label>
                        <InputCheckbox @bind-Value="@IngresoySalidaEquiposComputo.De_su_propiedad" />
