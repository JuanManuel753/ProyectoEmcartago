                        <MudTimePicker For="@(() => IngresoySalidaEquiposComputo.hora_Autorizado_por)" Label="Hora" Placeholder="Seleccione una hora" AmPm="true" @bind-Time="@IngresoySalidaEquiposComputo.hora_Autorizado_por" Variant="Variant.Outlined" Margin="Margin.Dense" AdornmentColor="Color.Primary" />
                    </div>
                </div>

            </div>

            <div>
                @if (IngresoySalidaEquiposComputo.Id != 0)
                {
                    <MudRadioGroup T="bool" @bind-SelectedOption="IngresoySalidaEquiposComputo.IsDelete">
                        <MudRadio Option="false" Color="Color.Success">Guardado</MudRadio>
                        <MudRadio Option="true" Color="Color.Error">Eliminar</MudRadio>
                    </MudRadioGroup>
                }
                @*alerta de eliminar*@
                @if (IngresoySalidaEquiposComputo.IsDelete == true)
                {

                    <MudAlert Icon="@Icons.TwoTone.WarningAmber" Severity="Severity.Error" Dense="true" Style="width:500px;" Class="my-2">Eliminar Seleccionado, Si Guarda El Formato De Ingreso/Salida  El Registro Sera Eliminado</MudAlert>
                }

            </div>

            @if (IngresoySalidaEquiposComputo.Mantenimiento_y_o_Reparacion | IngresoySalidaEquiposComputo.Prestamo | IngresoySalidaEquiposComputo.Devolucion | IngresoySalidaEquiposComputo.De_su_propiedad | IngresoySalidaEquiposComputo.Tranferencia | IngresoySalidaEquiposComputo.Despacho | IngresoySalidaEquiposComputo.Realizar_trabajo | Otro_value == true)
            {
                <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Success" EndIcon="@Icons.Rounded.Save">Guardar</MudButton>
            }
            else
            {

                <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Error" EndIcon="@Icons.Rounded.Save" Disabled="true">Guardar</MudButton>

            }
