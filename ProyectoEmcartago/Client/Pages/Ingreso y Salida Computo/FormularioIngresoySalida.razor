                        <MudTimePicker For="@(() => IngresoySalidaEquiposComputo.hora_Solicitado_por)" Label="Hora" Placeholder="Seleccione una hora" AmPm="true" @bind-Time="@IngresoySalidaEquiposComputo.hora_Solicitado_por" Variant="Variant.Outlined" Margin="Margin.Dense" AdornmentColor="Color.Primary" />
                    </div>
                    <div>
                        <h5>Autorizado por:</h5>
                        <MudTextField For="@(() => IngresoySalidaEquiposComputo.Autorizado_por)" Style="margin-bottom:10px;" Placeholder="Autorizado por:" @bind-Value="@IngresoySalidaEquiposComputo.Autorizado_por" Margin="Margin.Dense" Variant="Variant.Outlined" AdornmentColor="Color.Primary" Editable="true" Color="Color.Secondary" Elevation="12" />
