                    @if (IngresoySalidaEquiposComputo.Mantenimiento_y_o_Reparacion | IngresoySalidaEquiposComputo.Prestamo | IngresoySalidaEquiposComputo.Devolucion | IngresoySalidaEquiposComputo.De_su_propiedad | IngresoySalidaEquiposComputo.Tranferencia | IngresoySalidaEquiposComputo.Despacho | IngresoySalidaEquiposComputo.Realizar_trabajo | Otro_value == true)
                    {


                    }
                    else
                    {
                        <MudAlert Severity="Severity.Warning">Porfavor seleccione una opcion</MudAlert>
                    }

                </div>

                @if (Otro_value == true)
