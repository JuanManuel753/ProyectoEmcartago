                        <label>Transferencia</label>
                        <InputCheckbox @bind-Value="@IngresoySalidaEquiposComputo.Tranferencia" />
                    </div>
                    <div style="width:150px;  height:50px; margin:5px; text-align:center;">
                        <label>Despacho</label>
                        <InputCheckbox @bind-Value="@IngresoySalidaEquiposComputo.Despacho" />
                    </div>
                    <div style="width:150px;  height:50px; margin:5px; text-align:center;">
                        <label>Realizar un trabajo</label>
                        <InputCheckbox @bind-Value="@IngresoySalidaEquiposComputo.Realizar_trabajo" />
                    </div>
