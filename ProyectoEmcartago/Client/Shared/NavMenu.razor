    <MudNavMenu Dense="true" Color="Color.Dark">
            <MudNavGroup  Title="Formato De Permisos" Expanded="false" Icon="@Icons.TwoTone.DynamicForm" IconColor="Color.Tertiary" Style="color:white;">
                <MudNavLink  Href="indiceformatodesolicituddepermiso" Icon="@Icons.TwoTone.AdminPanelSettings" IconColor="Color.Tertiary" Style="color:white;" Match="NavLinkMatch.All">Indice Permisos</MudNavLink>
